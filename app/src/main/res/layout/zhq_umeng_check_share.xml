                android:text="@string/umeng_check_alipay"
                android:textColor="@color/umeng_text_color"
                android:textSize="18sp" />
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/umeng_divide"/>-->
